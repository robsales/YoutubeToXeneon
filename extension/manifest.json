{
  "manifest_version": 3,
  "name": "YoutubeToXeneon",
  "description": "Send the current YouTube video to the Xeneon Edge",
  "version": "2.0",
  "permissions": [],
  "host_permissions": [
    "http://localhost:3654/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
